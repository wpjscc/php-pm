{
    "name": "php-pm/php-pm",
    "description": "PHP-PM is a process manager, supercharger and load balancer for PHP applications.",
    "license": "MIT",
    "require": {
        "php": "^7.3 || ^8.0 ",
        "ext-pcntl": "*",
        "symfony/console": "^4|^5|^6",
        "symfony/error-handler": "^4.4|^5|^6",
        "symfony/process": "^4|^5|^6",
        "react/event-loop": "^1.0",
        "react/http": "^1.0",
        "react/stream": "^1.0",
        "react/socket": "^1.0",
        "react/child-process": "^0.6",
        "psr/http-server-handler": "^1.0",
        "ringcentral/psr7": "^1.2",
        "psr/http-message": "^1.0.1",
        "react/promise": "^3.1",
        "clue/framework-x": "dev-main"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.4",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PHPPM\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PHPPM\\Tests\\": "tests"
        }
    },
    "suggest": {
        "php-pm/httpkernel-adapter": "HttpKernel adapter for Symfony and Laravel frameworks"
    },
    "bin": [
        "bin/ppm"
    ],
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"passthru(sprintf(PHP_OS==='WINNT'?'xcopy %s /D /E /C /R /H /I /K /Y':'cp -rfv %s', 'patches/vendor/* vendor/'));\""
        ]
    }
}
